{
  "name": "Refreshie",
  "version": "2.1.0",
  "description": "Refreshie: Taking back control",
  "author": "thinkdj",
  "homepage": "https://think.dj/refreshie/",
  "license": "Private",
  "main": "src/main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "serve": "electron ."
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/thinkdj/uppcoming.apps"
  },
  "private": true,
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.52",
    "@electron-forge/maker-deb": "^6.0.0-beta.52",
    "@electron-forge/maker-rpm": "^6.0.0-beta.52",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.52",
    "@electron-forge/maker-zip": "^6.0.0-beta.52",
    "electron": "^9.1.0"
  },
  "dependencies": {
    "auto-launch": "^5.0.5",
    "electron-squirrel-startup": "^1.0.0",
    "jquery": "^3.5.1"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "asar": true,
        "prune": true,
        "dir": "app",
        "out": "dist",
        "overwrite": false
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "Refreshie"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
