{
  "name": "Refreshie",
  "version": "2.1.0",
  "description": "Refreshie: Taking back control",
  "author": "thinkdj",
  "homepage": "https://think.dj/refreshie/",
  "license": "Private",
  "main": "src/main.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "serve": "electron ."
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/thinkdj/uppcoming.apps"
  },
  "private": true,
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.52",
    "@electron-forge/maker-deb": "^6.0.0-beta.52",
    "@electron-forge/maker-rpm": "^6.0.0-beta.52",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.52",
    "@electron-forge/maker-zip": "^6.0.0-beta.52",
    "electron": "^9.1.0"
  },
  "dependencies": {
    "auto-launch": "^5.0.5",
    "electron-squirrel-startup": "^1.0.0",
    "jquery": "^3.5.1"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "__readme": "https://www.electronjs.org/docs/tutorial/code-signing",
        "asar": true,
        "prune": true,
        "dir": "app",
        "out": "./out/",
        "overwrite": false,
        "icon": "./src/app/assets/ico/tray.ico"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "__readme_config": "https://js.electronforge.io/maker/squirrel/interfaces/makersquirrelconfig",
          "config": {
            "name": "Refreshie",
            "title": "Refreshie Installer",
            "setupExe": "Refreshie_Installer.exe",
            "setupIcon": "./src/app/assets/ico/tray.ico",
            "loadingGif": "./src/app/assets/images/install/install.splash.monk.png",
            "dest": "./out/",
            "exe": "Refreshie.exe",
            "icon": "./src/app/assets/ico/tray.ico",
            "_iconUrl": "https://",
            "_certificateFile": "./cert.pfx",
            "_certificatePassword": "__SECRET_KEY__"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
